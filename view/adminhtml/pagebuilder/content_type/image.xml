<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <type name="image">
        <appearances>
            <appearance name="full-width">
                <elements>
                    <element name="desktop_image">
                        <attribute name="desktop_loading" source="loading"/>
                        <attribute name="desktop_width" source="width"/>
                        <attribute name="desktop_height" source="height"/>
                    </element>
                    <element name="mobile_image">
                        <attribute name="mobile_loading" source="loading"/>
                        <attribute name="mobile_width" source="width"/>
                        <attribute name="mobile_height" source="height"/>
                    </element>
                </elements>
            </appearance>
        </appearances>
    </type>
</config>
